@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-outline-secondary.rounded-pill.btn-lg {
        color: white;
        border: transparent;
        position: relative;
    }

    .btn-primary.rounded-pill.btn-lg:hover,
    .btn-outline-secondary.rounded-pill.btn-lg:hover {
        animation: button-hover-glow 0.5s ease-in-out;
    }

    .btn-primary.rounded-pill.btn-lg {
        color: white;
        border: transparent;
        position: relative;
        padding: 8px 20px;
    }

    .bg-gradient {
        background-image: linear-gradient(to left, #8001c9, #400d3d) !important;
        min-height: 100vh;
        min-width: 100vw;
        margin-bottom: 3vh;
        position: relative;
    }

    .wireframe-img {
        width: 50vw;
        height: 80vh;
        padding-left: 0vw;
        position: relative;
        padding-top: 17vh;
        padding-right: 7vw;
    }

    .top-row {
        max-width: 100vw !important;
        height: 50vh;
        padding-bottom: 0vh;
    }

    .bottom-row {
        max-width: 100vw !important;
        height: 50vh;
        padding-bottom: 0vh;
        margin-bottom: 5vh;
    }

    .container {
        min-width: 100vw !important;
        padding-left: 0 !important;
    }

    .title-frame {
        padding-left: 10vw;
        padding-top: 25vh;
        padding-bottom: 1vh;
    }

    .start-button-frame {
        padding-left: 10vw;
        padding-right: 5vw;
    }

    .description-row {
        padding-left: 11vw;
        padding-bottom: 2vh;
    }

    .demo-button {
        padding-left: 0vw;

    }

    .summary-row {
        padding-top: 3vh;

    }

    .name-box {
        padding-left: 17vw;
        background-color: #f2f2f2;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 12px 16px;
        height: 7vh;
        width: 15vw;
    }

    .name-col {
        padding-left: 25vw;
        padding-right: 25vw;
        
    }

    .email-box {
        padding-left: 17vw;
        background-color: #f2f2f2;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 12px 16px;
        height: 7vh;
        width: 15vw;
    }

    .usecase-box {
        padding-left: 17vw;
        background-color: #f2f2f2;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 12px 16px;
        height: 5vh;
        width: 7vw;
    }

    .email-col {
        padding-left: 10vw;
        padding-top: 3vh;
        width: 15vw;
    }
</style>


<head>
    <link rel="stylesheet" href="~/Views/Home/Index.css" asp-append-version="true" />
</head>


<body>

    <div class="container-fluid">
        <div class="row bg-gradient top-row">
            <div class="col ">
                <div class="row title-frame">
                    <header class="animated-text">
                        <h1 class="text-white display-4">Legal Documents,</h1>
                        <h1 id="text-container" class="text-white display-4">Decoded</h1>
                    </header>
                </div>
                <div class="row">
                    <div class="description-row text-white">
                        <h5>Understand complex legal documents with two clicks. Have your attorney work for you.
                        </h5>
                    </div>
                </div>
                <div class="row start-button-frame">
                    <div class="col start-button-col">
                        <a class="btn btn-primary rounded-pill btn-lg text-white text-decoration-none"
                            asp-area="Identity" asp-page="/Account/Register">Get Started</a>
                    </div>
                    <div class="col">
                        <a class=" demo-button btn btn-outline-secondary rounded-pill btn-lg text-white text-decoration-none"
                            asp-controller="Home" asp-action="OurProducts">Watch our demo &#8594</a>
                    </div>

                </div>

            </div>
            <div class="col">
                <img class="wireframe-img" src="../img/Wireframe.png" alt="Wireframe">
            </div>
        </div>

        <div class="bottom-row">
            <div class="row summary-row text-center">
                <h2>Work With Us</h2>
            </div>
            <div class="row summary-row text-center">
                <p>Axl is currently in beta but we would love to work with you. Tell us about your use case and we will
                    drive your doubts away.</p>
            </div>
            <div class="row">
                <div class="form-row justify-content-center">

                    <div class="col name-col">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control name-box" id="name" aria-describedby="nameHelp">
                        <div class="col email-col">
                            <label for="email" class="form-label">Email</label>
                            <input type="text" class="form-control email-box" id="email" aria-describedby="emailHelp">
                        </div>
                    </div>



                </div>
            </div>

                <div class="form-row justify-content-center">
                    <div class="row usecase-row justify-content-center">
                        <label for="usecase" class="form-label text-center">Use Case</label>
                        <input type="text" class="form-control usecase-box" id="usecase" aria-describedby="usecaseHelp">
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>

<script>
    window.onload() = function () {

    };
</script>