@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-outline-secondary.rounded-pill.btn-lg {
        color: white;
        border: transparent;
        position: relative;
    }

    .btn-primary.rounded-pill.btn-lg:hover,
    .btn-outline-secondary.rounded-pill.btn-lg:hover {
        animation: button-hover-glow 0.5s ease-in-out;
    }

    .btn-primary.rounded-pill.btn-lg {
        color: white;
        border: transparent;
        position: relative;
        padding: 8px 20px;
    }

    .bg-gradient {
        background-image: linear-gradient(to right, #053d1c, #a2d6b7) !important;
        min-height: 100vh;
        min-width: 100vw;
        margin-bottom: 3vh;
        position: relative;
    }

    .wireframe-img {
        width: 50vw;
        height: 80vh;
        padding-left: 0vw;
        position: relative;
        padding-top: 17vh;
        padding-right: 7vw;
    }

    .image1 {
        width: 11vw;
        height: 11vh;
        position: relative;
    }

    .image2 {
        width: 13vw;
        height: 15vh;
        padding-left: 5vw;
        position: relative;
        padding-top: 0vh;
    }

    .image3 {
        width: 11vw;
        height: 11vh;
        padding-left: 5vw;
        position: relative;
    }

    .top-row {
        max-width: 100vw !important;
        height: 50vh;
        padding-bottom: 0vh;
    }

    .bottom-row {
        max-width: 100vw !important;
        height: 50vh;
        padding-bottom: 0vh;
    }

    .container {
        min-width: 100vw !important;
        padding-left: 0 !important;
    }

    .title-frame {
        padding-left: 10vw;
        padding-top: 25vh;
        padding-bottom: 1vh;
    }

    .start-button-frame {
        padding-left: 10vw;
        padding-right: 5vw;
    }

    .description-row {
        padding-left: 11vw;
        padding-bottom: 2vh;
    }

    .demo-button {
        padding-left: 0vw;

    }

    .images-row {
        padding-top: 3vh;

    }
</style>


<head>
    <link rel="stylesheet" href="~/Views/Home/Index.css" asp-append-version="true" />
</head>


<body>

    <div class="container-fluid">
        <div class="row bg-gradient top-row">
            <div class="col ">
                <div class="row title-frame">
                    <header class="animated-text">
                        <h1 class="text-white display-4">Legal Documents,</h1>
                        <h1 id="text-container" class="text-white display-4">Decoded</h1>
                    </header>
                </div>
                <div class="row">
                    <div class="description-row text-white">
                        <h5>Understand complex legal documents with two clicks. Have your attorney work for you.
                        </h5>
                    </div>
                </div>
                <div class="row start-button-frame">
                    <div class="col start-button-col">
                        <a class="btn btn-primary rounded-pill btn-lg text-white text-decoration-none"
                            asp-area="Identity" asp-page="/Account/Register">Get Started</a>
                    </div>
                    <div class="col">
                        <a class=" demo-button btn btn-outline-secondary rounded-pill btn-lg text-white text-decoration-none"
                            asp-controller="Home" asp-action="OurProducts">Watch our demo &#8594</a>
                    </div>

                </div>

            </div>
            <div class="col">
                <img class="wireframe-img" src="../img/Wireframe.png" alt="Wireframe">
            </div>
        </div>

        <div class="bottom-row">
            <div class="row ">
                <header class="text-center">
                    <h2>The team built from world class organizations</h2>
                </header>
            </div>
            <div class="row images-row justify-content-center">
                <img class="image1" src="../img/google-business-logo.svg" alt="Google business logo">
                <img class="image3" src="../img/SJSU logo.png" alt="SJSU logo">
                <img class="image2" src="../img/skale-labs-vector-logo.png" alt="SKALE Labs logo">
            </div>
            <div class="row">
                <div class="">

                </div>
            </div>
        </div>

    </div>

</body>

<script>
    window.onload() = function () {

    };
</script>