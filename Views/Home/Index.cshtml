@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Ontological Risk Management";
    Layout = "~/Views/Shared/_Navbar.cshtml";
}
<link rel="stylesheet" href="~/css/index.css">
<div class="container-fluid p-0">

    <!-- Top Section -->
    <div class="top-row d-flex align-items-center">
        <div class="container landing-container">
            <div class="row title-row align-items-center">
                <div class="col-lg-8 col-md-12 text-lg-left pt-0">
                    <header class="title-frame">
                        <h1 class="display-4 title-text">Ontology <span class="highlight">for Enterprise Risk
                                Management</span></h1>
                        <h5 class="text-light mt-2">Empowering Data Through Ontology Services</h5>
                    </header>
                    <div class="start-button-frame mt-4">
                        @{
                            var getStartedUrl = User.Identity.IsAuthenticated ? Url.Action("ServiceDashboard", "Home") :
                            Url.Action("Demo", "Home");
                        }
                        <a class="btn btn-primary-black rounded-pill btn-lg text-white text-decoration-none mr-2"
                            href="@getStartedUrl">Get Started</a>
                        <a class="btn btn-primary-demo rounded-pill btn-lg text-white text-decoration-none"
                            href="#middle-section">Learn More &#8594;</a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12 text-center mt-3 mt-lg-0 p-5">
                    <div class="spider-chart-container">
                        <canvas id="spiderChart" width="400" height="400"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Middle Section -->
    <div id="middle-section" class="row middle-section text-center py-5">
        <div class="col-md-10 col-lg-8 mx-auto">
            <h2>Strive for More</h2>
            <div class="row mt-4">
                <div class="col-12 mb-4">
                    <div class="info-box">
                        <h3 class="info-title">OaaS</h3>
                        <p class="info-description">Learn More about Ontology as a Service (OaaS) and how it can benefit
                            your organization.</p>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="LearnMore">Learn More</a>
                    </div>
                </div>
                <div class="col-12 mb-4">
                    <div class="info-box">
                        <h3 class="info-title">Why Strive</h3>
                        <p class="info-description">Watch our demo to understand why Strive is the best choice for your
                            ontology needs.</p>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Demo">Watch Demo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Us Section -->
    <div class="top-row d-flex align-items-center">
        <div class="container landing-container">
            <div class="row title-row align-items-center">
                <div class="col-12 text-center pt-0">
                    <header class="title-frame">
                        <h1 class="display-4 title-text">Contact Us</h1>
                        @*<h5 class="text-light mt-2">We'd love to hear from you!</h5>*@
                    </header>
                    <div class="d-flex justify-content-center mt-4">
                        <div class="calendly-inline-widget" data-url="https://calendly.com/apoorva-sharma-strive/30min"></div>
                            <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js"></script>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="footer-section bg-dark text-white text-center">
        <div class="container">
            <p>Contact Information:</p>
            <p>Email: info@strive.com | Phone: +123 456 7890</p>
            <p>Address: 123 Risk St, Manage City, Ontological State, 45678</p>
        </div>
    </footer>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/index.js"></script>