@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>

<style>
    .btn-primary.rounded-pill.btn-lg {
        color: white;
        border: transparent;
        position: relative;
        background-color: black;
    }

    .btn-primary.rounded-pill.btn-lg:hover {
        background-color: purple;
    }

    .bg-color {
        min-height: 100vh;
        margin-bottom: 10vh;
        position: relative;
    }

    .header-container {
        padding-top: 5vh;
    }

    .container-fluid {
        color: #f7f7f7;
    }

    .font {
        font-family: 'Roboto', sans-serif;
    }

    .btn-container {
        margin-left: 30vw;
        margin-right: 30vw;
    }

    .text-row {
        margin-top: 10vh;
    }
</style>

<link rel="stylesheet" href="~/css/aboutUs.css">

<div class="container-fluid bg-color">
    <div class="header-container">
        <header>
            <h1 class="display-4 text-center font text-black">Striving Up</h1>
        </header>

    </div>
    <div class="row mt-3 d-flex btn-container">
        <a class="btn btn-lg rounded-pill font btn-primary" href="https://calendly.com/apoorva-sharma-strive/30min">View
            Demo Schedule</a>
    </div>
    <div class="row text-row">
        <div class="col">
            <div class="container p3 rounded">
                <h1 class="mt-3 font text-black">What Strive Does Best</h1>
                <p class="text-black font">
                    Strive copilot empowers attorneys and their clients
                    through rapid document analysis and AI-enabled contract risk assessment.
                </p>
            </div>
        </div>
        <div class="col">
            <div class="embed-responsive embed-responsive-1by1">
                <iframe class="embed-responsive-item" src="..." allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>
