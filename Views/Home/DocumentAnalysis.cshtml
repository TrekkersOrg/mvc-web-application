    .summary-body-container {
        border: 2px solid #007bff;
        padding: 5px;
        position: relative;
    }

    .view-doc-button,
    .new-upload-button,
    .save-button {
        width: 90%;
        border: 2px solid #007bff;
        color: white;
        background-color: #007bff;
        border-radius: 5px;
        cursor: pointer;
        position: relative;
        padding: 8px 20px;
    }

    .view-doc-button:hover,
    .new-upload-button:hover,
    .save-button:hover,
    .send-button:hover {
        background-color: #ffffff;
        color: #007bff;
    }

    .instructions-box {
        background-color: #f5f5f5;
        box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.2);
