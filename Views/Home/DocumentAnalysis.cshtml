<div class="container-fluid d-flex">

    <div class="row mt-9">
        <div class="col-md-6">
            <div class="chatbot-container border rounded shadow bg-light">
                <div class="chat-header d-flex align-items-center justify-content-between p-3">
                    <h4 class="mb-0">Chat</h4>
                </div>

                <div class="chat-body flex-grow-1 overflow-auto p-3">
                    <ul id="response-output" class="chat-messages list-unstyled m-0 p-0"></ul>
                </div>

