<style>
    .chatbot-container {
        position: relative;
        border-color: #007bff;
        border-width: 3px;
        border-radius: 5px;
        height: 70vh;
        display: flex;
        flex-direction: column;
        margin-top: 20px;
    }

    .chat-body {
        flex-grow: 1;
        position: relative;
    }

    .chat-input {
        position: relative;
        left: 15px;
        right: 15px;
