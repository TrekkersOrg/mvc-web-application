                    <button class="btn btn-primary ml-3 send-button rounded-0" onclick="sendQuery()">Send</button>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="instructions-box border rounded shadow d-flex flex-column">

                <div class="instructions-list flex-grow-1">
                    <p class="insert-summary"></p>
                </div>
            </div>
            <br>
            <br>

            <div class="row mt-5 summary-footer justify-content-center d-flex mt-auto">

                <div class="col-md-5 d-flex justify-content-end h-200 p-2">
                    <button class="new-upload-button">Next upload</button>
                </div>
                <div class="col-md-5 d-flex justify-content-start h-100 p-2">
                    <button class="save-button">Save</button>
                </div>
                <div class="col-md-5 d-flex justify-content-start h-100 p-2">
                    <button class="view-doc-button">View Document</button>
