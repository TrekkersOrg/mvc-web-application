@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style> 
    .chat-container {
        background-color: #f5f5f5;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 15px;
    }

    .chatbot-container {
        border-color: #007bff;
        border-width: 3px;
        border-radius: 5px;
        height: 95vh;
    }

    .chat-header {
        margin-bottom: 10px;
    }

    .chat-messages {
        list-style: none;
        padding: 0;
    }

    .chat-message-user,
    .chat-message-bot {
        margin-top: 10px;
    }

    .summary-container {
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-left: 10px;
        height: 90vh;
    }

    .chat-message-user {
        text-align: right;
    }

    .chat-message-bot {
        text-align: left;
    }

    .chat-input {
        margin-top: 10px;
    }

    .summary-header {
        margin-top: 2px;
    }
</style>



<div class="container-fluid d-flex">
    <div class="container-fluid d-flex">
        <div class="chatbot-container col-md-6 border rounded shadow">
            <div class="chat-header">
                <h3>Chatbot</h3>
            </div>
            <div class="chat-body flex-grow-1">
                <ul class="chat-messages">
                    </ul>
            </div>
            <div class="chat-input mt-auto">
                <input type="text" class="form-control" placeholder="Type your message...">
                <button class="btn btn-primary btn-send">Send</button>
            </div>
        </div>
        <div class="summary-container col-md-6 border rounded shadow">
            <div class="summary-header">
                <h3>Summary</h3>
            </div>
            <div class="summary-body-container flex-grow-1">
