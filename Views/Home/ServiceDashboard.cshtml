@{
    ViewData["Title"] = "Service Dashboard";
    Layout = "~/Views/Shared/_ServiceDashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mt-4">
        <div class="col-md-4 offset-md-1">
            <a href="@Url.Action("FileUpload", "Home")" class="text-decoration-none">
                <div class="widget shadow p-3 mb-5 bg-light rounded">
                    <h5 class="widget-title">File Upload</h5>
                    <p class="widget-text">Upload your files here</p>
                </div>
            </a>
        </div>
        <div class="col-md-4 offset-md-1">
            <a href="@Url.Action("ContactUs", "Home")" class="text-decoration-none">
                <div class="widget shadow p-3 mb-5 bg-light rounded">
                    <h5 class="widget-title">Get in Contact</h5>
                    <p class="widget-text">Schedule an appointment, now</p>
                </div>
            </a>
        </div>
        <div id="all-files-widget" class="col-md-4 offset-md-1">
            <!-- All files widget will be dynamically added here -->
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>

<style>
    .widget {
        border-radius: 20px !important;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        background-color: #f8f9fa;
        transition: box-shadow 0.3s;
        width: 400px;
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .widget:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .widget-title {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .widget-text {
        font-size: 1rem;
        color: #555555;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const allFilesWidget = document.getElementById('all-files-widget');

        function fetchUploadedFiles() {
            const uploadedFiles = JSON.parse(sessionStorage.getItem('uploadedFiles')) || [];
            let widgetContent = `
                <div class="widget shadow p-3 mb-5 bg-light rounded">
                    <h5 class="widget-title">All Files</h5>
                    <ul class="list-group">`;

            uploadedFiles.forEach(file => {
                widgetContent += `
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        ${file}
                        <button class="btn btn-primary btn-sm" onclick="analyzeFile('${file}')">Analyze</button>
                    </li>`;
            });

            widgetContent += `
                    </ul>
                </div>`;

            allFilesWidget.innerHTML = widgetContent;
        }

        window.analyzeFile = function(fileName) {
            sessionStorage.setItem('selectedFile', fileName);
            window.location.href = '@Url.Action("DocumentDashboard", "Home")';
        }

        fetchUploadedFiles();
    });
</script>
