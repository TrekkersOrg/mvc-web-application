<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Strive</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/StriveAI.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm nav-gradient box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand font text-dark" asp-area="" asp-controller="Home" asp-action="Index">Strive</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link font btn btn-lg text-dark" asp-area="" asp-controller="Home"
                                asp-action="Demo">Demo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font text-dark btn btn-lg" asp-area="" asp-controller="Home"
                                asp-action="FileUpload">File Upload</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font btn btn-lg text-dark" asp-area="" asp-controller="Home"
                                asp-action="DocumentDashboard">Document Dashboard</a>
                        </li>
                        @if (!User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link font text-dark btn btn-lg" asp-area="" asp-controller="Home"
                                    asp-action="OurProducts" style="display: none;">Try Strive free</a>
                            </li>
                        }
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link font text-dark btn btn-lg" asp-area="" asp-controller="Home"
                                    asp-action="FileUpload">File Upload</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link font text-dark btn btn-lg" asp-area="" asp-controller="Home"
                                    asp-action="DocumentAnalysis" style="display: none;">Document Analysis</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link font text-dark btn btn-lg" asp-area="" asp-controller="Home"
                                    asp-action="IssueReport">Issue Report</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin: 0;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2023 - StriveAI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
