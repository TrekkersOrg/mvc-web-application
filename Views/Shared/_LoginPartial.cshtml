@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="user-greeting" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"></a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white btn btn-lg" asp-area="Identity" asp-page="/Account/Register" style="display: none;">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white btn btn-lg" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
